<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38520d"
    tools:context="com.example.shu.crocodile.ArtistActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@android:drawable/screen_background_light"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="СЛОВО"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        android:textStyle="italic"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="99dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="99dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нарисуй :"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="27dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="27dp" />

    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:fillViewport="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="14dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="82dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:id="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_yellow"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                android:backgroundTint="#fef200"
                android:onClick="onClick_yellow"
                tools:layout_editor_absoluteX="229dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_redDark"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#880016"
                android:onClick="onClick_redDark"
                tools:layout_editor_absoluteX="86dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_red"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#ed1b24"
                android:onClick="onClick_red"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_pink"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#feaec9"
                android:onClick="onClick_pink"
                tools:layout_editor_absoluteX="159dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_blueBlue"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#9ad9ea"
                android:onClick="onClick_blueBlue"
                tools:layout_editor_absoluteX="337dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_blue"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#3f47cc"
                android:onClick="onClick_blue"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="455dp" />

            <Button
                android:id="@+id/button_darkGreen"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#23b14d"
                android:onClick="onClick_greenDark"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="455dp" />

            <Button
                android:id="@+id/button_ligthBlue"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#00a3e8"
                android:onClick="onClick_blueLigth"
                tools:layout_editor_absoluteX="86dp"
                tools:layout_editor_absoluteY="455dp" />

            <Button
                android:id="@+id/button_brown"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#b97a57"
                android:onClick="onClick_brown"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_white"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:onClick="onClick_white"
                tools:layout_editor_absoluteX="264dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_purple"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#a349a3"
                android:onClick="onClick_purple"
                tools:layout_editor_absoluteX="229dp"
                tools:layout_editor_absoluteY="465dp" />

            <Button
                android:id="@+id/button_ligthGreen"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#b5e51d"
                android:onClick="onClick_greenLigth"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="455dp" />

            <Button
                android:id="@+id/button_black"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#000000"
                android:onClick="onClick_black"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_orange"
                android:layout_width="30dp"
                android:layout_height="48dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#ff7f26"
                android:onClick="onClick_orange"
                tools:layout_editor_absoluteX="194dp"
                tools:layout_editor_absoluteY="386dp" />

            <Button
                android:id="@+id/button_clearAll"
                android:layout_width="42dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:onClick="onClick_clear"
                android:text="All"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="275dp"
                tools:layout_editor_absoluteY="0dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_painter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="21dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="21dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp" />

</android.support.constraint.ConstraintLayout>
