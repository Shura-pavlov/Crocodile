<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38520d"
    tools:context="com.example.shu.crocodile.ArtistActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/button_black"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:backgroundTint="#000000"
        android:onClick="onClick_black"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_brown"
        app:layout_constraintLeft_toLeftOf="@+id/button_ligthGreen"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button_orange"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:backgroundTint="#ff7f26"
        android:onClick="onClick_orange"
        app:layout_constraintBottom_toTopOf="@+id/button_purple"
        app:layout_constraintLeft_toLeftOf="@+id/button_pink"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button_yellow"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#fef200"
        android:onClick="onClick_yellow"
        app:layout_constraintBottom_toTopOf="@+id/button_white"
        app:layout_constraintLeft_toLeftOf="@+id/button_white"
        app:layout_constraintRight_toRightOf="@+id/button_white"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button_brown"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:backgroundTint="#b97a57"
        android:onClick="onClick_brown"
        app:layout_constraintBottom_toTopOf="@+id/button_darkGreen"
        app:layout_constraintLeft_toLeftOf="@+id/button_black"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button_darkRed"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:backgroundTint="#880016"
        android:onClick="onClick_redDark"
        app:layout_constraintBottom_toTopOf="@+id/button_ligthBlue"
        app:layout_constraintLeft_toLeftOf="@+id/button_brown"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button_red"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:backgroundTint="#ed1b24"
        android:onClick="onClick_red"
        app:layout_constraintBottom_toTopOf="@+id/button_blue"
        app:layout_constraintLeft_toLeftOf="@+id/button_darkRed"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button_pink"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:backgroundTint="#feaec9"
        android:onClick="onClick_pink"
        app:layout_constraintBottom_toTopOf="@+id/button_bir"
        app:layout_constraintLeft_toLeftOf="@+id/button_red"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button_bir"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:backgroundTint="#9ad9ea"
        android:onClick="onClick_blueBlue"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_ligthBlue"
        app:layout_constraintLeft_toLeftOf="@+id/button_pink"
        app:layout_constraintRight_toRightOf="@+id/button_pink"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button_blue"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:backgroundTint="#3f47cc"
        android:onClick="onClick_blue"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_darkGreen"
        app:layout_constraintLeft_toLeftOf="@+id/button_red"
        app:layout_constraintRight_toRightOf="@+id/button_red"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button_ligthBlue"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:backgroundTint="#00a3e8"
        android:onClick="onClick_blueLigth"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_ligthGreen"
        app:layout_constraintLeft_toLeftOf="@+id/button_darkRed"
        app:layout_constraintRight_toRightOf="@+id/button_darkRed"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button_darkGreen"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#23b14d"
        android:onClick="onClick_greenDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/button_brown"
        app:layout_constraintRight_toRightOf="@+id/button_brown"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button_white"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:backgroundTint="#ffffff"
        android:onClick="onClick_white"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_bir"
        app:layout_constraintLeft_toLeftOf="@+id/button_purple"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button_purple"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:backgroundTint="#a349a3"
        android:onClick="onClick_purple"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_blue"
        app:layout_constraintLeft_toLeftOf="@+id/button_orange"
        app:layout_constraintRight_toRightOf="@+id/button_orange"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="22dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.216"
        app:srcCompat="@android:drawable/screen_background_light"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="СЛОВО"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="italic"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="39dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/button_clearAll"
        android:layout_marginRight="14dp"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="Нарисуй :"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        android:layout_marginLeft="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_chat"
        android:layout_width="91dp"
        android:layout_height="101dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="397dp"
        android:text="чат"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_clearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="очистить"
        android:onClick="onClick_clear"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/button_ligthGreen"
        android:layout_width="25dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#b5e51d"
        android:onClick="onClick_greenLigth"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_darkGreen"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1" />

</android.support.constraint.ConstraintLayout>
